{
  "name": "gitpod-documentation",
  "version": "0.0.1",
  "description": "Documentation for Gitpod",
  "license": "Apache-2.0",
  "directories": {
    "doc": "doc"
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "gitbook-cli": "^2.3.2",
    "concurrently": "^3.5.1",
    "npm-watch": "^0.3.0",
    "broken-link-checker": "^0.7.7"
  },
  "devDependencies": {},
  "watch": {
    "build": "doc/**/*.*"
  },
  "scripts": {
    "build": "sh resample-images.sh && gitbook build doc site/doc",
    "watch": "npm-watch",
    "check": "blc http://localhost:8080 -ro --exclude http://localhost:3000 --exclude https://localhost:3000 --exclude https://8080-fe76ea5b-924d-4a67-a2d5-24a259619fa7.ws.gitpod.io/",
    "do-serve": "npx http-server -c-1 site/doc",
    "serve": "concurrently \"npm run watch\" \"npm run do-serve\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitpod-io/gitpod-docs.git"
  },
  "author": "TypeFox",
  "bugs": {
    "url": "https://github.com/gitpod-io/gitpod-docs/issues"
  },
  "homepage": "https://gitpod.io"
}
